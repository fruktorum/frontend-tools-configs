# https://editorconfig.org

root = true

[*]
charset = utf-8
indent_style = space
indent_size = 4
max_line_length = 100
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{json,json5,webmanifest}]
indent_size = 2

[*.{yml,yaml}]
indent_size = 2

[*.{md,mdx}]
insert_final_newline = false
trim_trailing_whitespace = false
